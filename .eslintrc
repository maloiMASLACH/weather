{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "airbnb/base"
    ],
    "rules": {
      "no-plusplus": "off",
      "no-console": "warn",
      "arrow-body-style": ["warn", "always"],
      "max-len": ["warn", { "code": 120 }],
      "indent": ["warn", 2, {
        "SwitchCase": 1
      }],
      "import/prefer-default-export": "off",
      "no-param-reassign": ["error", {
        "props": false
      }]
    },
    "ignorePatterns": ["*config.js"]
  }